<Page x:Class="BSNet2Final.Admin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BSNet2Final"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Admin">

    <Grid Background="White">
        <Label x:Name="adminLabel" Content="Admin" HorizontalAlignment="Left" Margin="10,10,10,0" VerticalAlignment="Top" Height="49" Width="280" FontSize="26" HorizontalContentAlignment="Center"/>
        <TextBlock x:Name="adminYouTextBlock" HorizontalAlignment="Left" Margin="21,64,0,0" TextWrapping="Wrap" Text="Thank you for logging into the Admin page. This page is specifically if you log in with the Admin account. In the future it will be able to delete or update passwords if someone asks for it." VerticalAlignment="Top"/>
        <Button x:Name="logoutButton" Content="Logout" HorizontalAlignment="Left" Margin="203,239,0,0" VerticalAlignment="Top" Width="75" Click="logoutButton_Click" IsCancel="True"/>
        <Button x:Name="deleteAccountButton" Content="Delete Account" HorizontalAlignment="Left" Margin="21,239,0,0" VerticalAlignment="Top" Width="98" Click="deleteAccountButton_Click"/>

    </Grid>
</Page>
