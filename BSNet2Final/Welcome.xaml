<Page x:Class="BSNet2Final.Welcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BSNet2Final"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Welcome">

    <Grid Background="White">
        <Label x:Name="welcomeLabel" Content="Welcome" HorizontalAlignment="Left" Margin="10,10,10,0" VerticalAlignment="Top" Height="49" Width="280" FontSize="26" HorizontalContentAlignment="Center"/>
        <TextBlock x:Name="thankYouTextBlock" HorizontalAlignment="Left" Margin="21,64,0,0" TextWrapping="Wrap" Text="Thank you for logging into the welcome page. This page isnt fully optimized to be an awesome login page other than to say thank you :D" VerticalAlignment="Top"/>
        <Button x:Name="logoutButton" Content="Logout" HorizontalAlignment="Left" Margin="118,236,0,0" VerticalAlignment="Top" Width="75" Click="logoutButton_Click" IsDefault="True" IsCancel="True"/>

    </Grid>
</Page>
